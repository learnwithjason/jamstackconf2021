---
import Layout from '../components/Layout.astro';
import AddToCart from '../components/add-to-cart.jsx';
---

<style>
.products {
  display: grid;
  margin: 0 auto;
  max-width: 1280px;
}

@media (min-width: 700px) {
  .products {
    --maxWidth: 50%;
    grid-template-columns: repeat(2, min(var(--maxWidth), 640px));
  }
}

@media (min-width: 1280px) {
  .products {
    --maxWidth: 50% - 1rem;
    gap: 2rem;
    margin-top: 3rem;
  }
}

.product {
  padding-bottom: 3rem;
}

.image-wrapper {
  align-items: center;
  aspect-ratio: 4 / 3;
  background: var(--orange);
  display: flex;
  justify-content: center;
}

.product:nth-child(even) > .image-wrapper {
  background: var(--blue);
}

.image-wrapper img {
  display: block;
  max-width: 480px;
  width: 100%;
}

.details {
  padding: 1.5rem max(5vw, 1rem);
}

.heading {
  font-size: clamp(1.25rem, 4.5vw, 1.375rem);
  margin-top: 0;
}

:global(.options) {
  border: 2px solid var(--black);
  border-radius: 0.25rem;
  color: var(--black);
  display: block;
  font-family: var(--fontHeading);
  font-size: 1rem;
  margin-top: 2rem;
  padding: 0.5rem 1rem;
  width: 100%;
}

:global(.button) {
  background-image: var(--gradient);
  border: 4px solid var(--black);
  border-radius: 0.875rem;
  box-shadow: 0.25em 0.25em 0 var(--black);
  color: var(--black);
  display: block;
  font-family: var(--fontHeading);
  font-size: 1.25rem;
  font-weight: 600;
  margin-top: 2rem;
  padding: 1rem;
  text-align: center;
  text-decoration: none;
  width: 100%;
}

:global(.options) + :global(.button) {
  margin-top: 1rem;
}
</style>

